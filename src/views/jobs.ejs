<h1 class="text-center m-2">All Available Openings</h1>
<div class="container d-flex flex-wrap justify-content-around">
  <% jobs.forEach((job)=>{ %>
  <div class="card m-2 jobs-card bg-dark">
    <div class="card-header bg-body-tertiary">
      <div
        class="bg-success d-inline-block rounded-circle mx-2"
        style="border-radius: 50%; height: 10px; width: 10px"
      ></div>
      Active
    </div>
    <div
      class="card-body d-flex flex-column justify-content-between text-light"
    >
      <h4 class="card-title"><%= job.compName %></h4>
      <h6 class="card-title">
        <span class="text-info"><%= job.domain %></span>
        | <span class="text-warning"><%= job.designation %></span>
      </h6>
      <div class="align-self-start">
        <i class="fa-solid fa-location-dot text-danger"></i>
        <%= job.location %>
      </div>
      <div class="d-flex p-2 flex-wrap">
        <% job.skillRequired.forEach((skill)=>{ %>
        <div class="m-1 px-2 py-1 border rounded-pill skill-pill">
          <%= skill %>
        </div>
        <%})%>
      </div>
      <form action="/jobs" method="post">
        <input type="text" value="<%= job.id %>" hidden name="jobId" />
        <button
          class="btn btn-info mt-2 py-1 px-2 mx-auto d-block job-details"
          type="submit"
        >
          More Details
        </button>
      </form>
    </div>
  </div>
  <%})%>
</div>
