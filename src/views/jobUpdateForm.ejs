<!-- form element -->
<form action="/updateJobPost" method="post" class="m-3">
  <div class="border rounded bg-dark text-light p-3">
    <h1 class="modal-title fs-3 text-center" id="applicationFormLabel">
      Update Job Opening Post for
      <span class="text-warning"><%= locals.jobDetails.designation %></span>
      at
      <span class="text-primary"><%= locals.jobDetails.compName %></span>
    </h1>

    <div class="border rounded my-3 p-2 ps-4">
      <div class="row mb-3">
        <label for="domain" class="col-sm-4 col-form-label">Domain</label>
        <div class="col-sm-8">
          <select
            class="form-select"
            aria-label="Select-Domain"
            name="domain"
            id="domain"
          >
            <option selected><%= jobDetails.domain %></option>
            <option value="Tech">Tech</option>
            <option value="HR">HR</option>
            <option value="Accounts">Accounts</option>
            <option value="Ops">Tech</option>
            <option value="Admin">HR</option>
            <option value="Sales">Accounts</option>
          </select>
        </div>
      </div>

      <div class="row mb-3">
        <label for="compName" class="col-sm-4 col-form-label"
          >Company Name</label
        >
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            id="compName"
            name="compName"
            value="<%= jobDetails.compName %>"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="designation" class="col-sm-4 col-form-label"
          >Designation/ Role</label
        >
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            id="designation"
            name="designation"
            value="<%= jobDetails.designation %>"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="packageLimit" class="col-sm-4 col-form-label"
          >Enumeration (in LPA)</label
        >
        <div class="col-sm-8">
          <input
            type="number"
            class="form-control"
            id="packageLimit"
            name="packageLimit"
            value="<%= jobDetails.packageLimit %>"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="skillRequired" class="col-sm-4 col-form-label"
          >Skill Tags</label
        >
        <div class="col-sm-4">
          <select
            class="form-select"
            aria-label="Select-Domain"
            name="skillRequired"
            id="skillRequired"
            multiple
          >
            <% jobDetails.skillRequired.forEach((skill)=>{ %>
            <option selected><%= skill %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-sm-4">
          <label for="addNewSkill" class="d-block">Add New Skill :</label>
          <input
            type="text"
            class="form-control-sm"
            id="addNewSkill"
            name="addNewSkill"
          />
          <button
            class="btn btn-light btn-sm"
            type="button"
            id="addNewSkillBtn"
          >
            Add
          </button>
        </div>
      </div>
      <div class="row mb-3">
        <label for="vacancy" class="col-sm-4 col-form-label"
          >Number of Posts</label
        >
        <div class="col-sm-8">
          <input
            type="number"
            class="form-control"
            id="vacancy"
            name="vacancy"
            value="<%= jobDetails.vacancy %>"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="location" class="col-sm-4 col-form-label">Location</label>
        <div class="col-sm-8">
          <input
            type="text"
            class="form-control"
            id="location"
            name="location"
            value="<%= jobDetails.location %>"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="closingDate" class="col-sm-4 col-form-label"
          >Closing Date</label
        >
        <div class="col-sm-8">
          <input
            type="date"
            class="form-control"
            id="closingDate"
            name="closingDate"
            value="<%= `${(new Date(jobDetails.closingDate)).getFullYear()}-${(new Date(jobDetails.closingDate)).getMonth().toString().padStart(2, '0')}-${(new Date(jobDetails.closingDate)).getDate().toString().padStart(2, '0')}` %>"
            required
          />
        </div>
      </div>
    </div>
    <!-- footer -->
    <div>
      <div class="input-group mb-3">
        <div class="input-group-text">
          <input
            class="form-check-input mt-0"
            type="checkbox"
            name="jobId"
            value="<%= locals.jobDetails.id %>"
            aria-label="Checkbox for following text input"
            required
          />
        </div>
        <span class="form-control" aria-label="Text input with checkbox">
          It is good thing to check your details at least once. Check this box
          if you have verified the details.
        </span>
      </div>
      <div class="d-flex justify-content-center">
        <!-- submit form button to open a model with alert weather to really submit or not -->
        <button type="submit" class="btn btn-info">SUBMIT</button>
      </div>
    </div>
  </div>
</form>
